<div class="padrao_box">

<div class="content_padrao">
<h2>Logar</h2>
<br>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :style => "font-weight:bold;" %><br />
  <%= f.email_field :email, :style => "width: 300px; height:30px; border:1px solid #00a0db;",:placeholder => "digite o seu email", :autofocus => true %></div>

  <div><%= f.label :senha, :style => "font-weight:bold;" %><br />
  <%= f.password_field :password, :style => "width: 300px; height:30px; border:1px solid #00a0db;",:placeholder => "sua senha" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Logar", :style => "width:250px; height:30px; background:#00a0db; border:0px; color:white; padding:5px;" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>