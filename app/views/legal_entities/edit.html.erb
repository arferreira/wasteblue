<div class="padrao_box">
  <div class="form_padrao">
    <%= form_for @legal_entity do |f| %>
    <div>
        <%= f.label :contact_name %>
        <%= f.text_field :contact_name %>
      </div>
      <div>
        <%= f.label :telephone_home %>
        <%= f.text_field :telephone_home %>
      </div>
      <div>
        <%= f.label :telephone_cell %>
        <%= f.text_field :telephone_cell %>
      </div>
      <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :district %>
        <%= f.text_field :district %>
      </div>
      <div>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
      <div>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>
      <div>
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label :company_name %>
        <%= f.text_field :company_name %>
