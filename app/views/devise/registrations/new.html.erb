<div class="padrao_box">

<div class="content_padrao">

<h2>Cadastre-se</h2>
<br />
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, :style => "font-weight:bold;"%><br />
  <%= f.email_field :email, :style => "width: 300px; height:30px; border:1px solid #00a0db;",:placeholder => "digite o seu email", :autofocus => true %></div>

  <div><%= f.label :senha, :style => "font-weight:bold;" %><br />
  <%= f.password_field :password, :style => "width: 300px; height:30px; border:1px solid #00a0db;",:placeholder => "sua senha" %></div>

  <div><%= f.label :confirmar_senha, :style => "font-weight:bold;" %><br />
  <%= f.password_field :password_confirmation, :style => "width: 300px; height:30px; border:1px solid #00a0db;",:placeholder => "confirme sua senha" %></div>
<br />
  <div><%= f.submit "Cadastrar", :style => "width:250px; height:30px; background:#00a0db; border:0px; color:white; padding:5px;" %></div>
<% end %>

<%= render "devise/shared/links" %>
