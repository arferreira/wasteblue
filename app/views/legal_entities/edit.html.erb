        <%= f.text_field :waste_generated %>
      </div>
      <div>
        <%= f.label :website %>
        <%= f.text_field :website %>
      </div>
      <div>
        <%= f.label :type_of_company %>
        <%= f.text_field :type_of_company %>
      </div>

      <div>
        <%= f.submit "Salvar", :class => "btn btn-primary" %>
      </div>
    <% end %>
